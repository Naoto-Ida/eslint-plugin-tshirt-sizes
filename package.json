{
  "name": "eslint-plugin-tshirt-sizes",
  "version": "0.0.0-development",
  "description": "An ESLint rule which enforces ordering of object keys based on T-shirt sizes.",
  "homepage": "https://github.com/Naoto-Ida/eslint-plugin-tshirt-sizes",
  "repository": {
    "url": "git@github.com:Naoto-Ida/eslint-plugin-tshirt-sizes.git",
    "type": "git"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin"
  ],
  "author": "Naoto Ida <naoto.ida+programming@gmail.com>",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "license": "MIT",
  "engines": {
    "node": ">=10"
  },
  "devDependencies": {
    "@types/eslint": "^8.4.1",
    "@types/eslint-utils": "^3.0.1",
    "@types/node": "^17.0.21",
    "babel-eslint": "^10.1.0",
    "esbuild": "^0.14.23",
    "esbuild-jest": "^0.5.0",
    "eslint": "^7.9.0",
    "eslint-utils": "^3.0.0",
    "fast-glob": "^3.2.11",
    "husky": "^7.0.4",
    "ts-node": "^10.5.0",
    "typescript": "^4.5.5",
    "xo": "^0.48.0",
    "semantic-release": "^19.0.2"
  },
  "scripts": {
    "lint": "xo",
    "lint:fix": "xo --fix",
    "test": "ts-node src/__tests__/tshirt-sizes.ts",
    "clean": "rm -rf lib",
    "prebuild": "yarn clean",
    "build": "yarn tsc --noEmit && yarn build:js",
    "build:js": "node scripts/build.js",
    "release": "semantic-release --no-ci"
  },
  "xo": {
    "ignores": [
      "scripts"
    ],
    "rules": {
      "import/extensions": "off",
      "import/no-anonymous-default-export": "off",
      "unicorn/no-array-push-push": "off",
      "@typescript-eslint/consistent-type-assertions": "off",
      "@typescript-eslint/naming-convention": "off",
      "@typescript-eslint/prefer-optional-chain": "off"
    }
  },
  "release": {
    "branches": [
      "main"
    ]
  }
}
